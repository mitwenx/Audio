<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="40dp"
    android:minHeight="40dp"
    android:updatePeriodMillis="0" <!-- Set to 0 if updates only happen via code -->
    android:previewImage="@drawable/ic_mic_widget" <!-- Preview shown when adding widget -->
    android:initialLayout="@layout/widget_layout" <!-- Layout used for preview and initial placement -->
    android:description="@string/widget_description" <!-- Description shown when adding -->
    android:widgetCategory="home_screen" <!-- Category where widget appears -->
    android:resizeMode="none" <!-- Widget cannot be resized -->
    android:targetCellWidth="1"  <!-- Optional: Define size in cells -->
    android:targetCellHeight="1"> <!-- Optional: Define size in cells -->
</appwidget-provider>
